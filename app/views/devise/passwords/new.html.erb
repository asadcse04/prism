<div class="page-margin">
  <div id="userform">

    <h2><%= t 'log-in.forgot' %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.submit "Reset password" %>
  <% end %>

<p><%= render "links" %></p>

	</div>
</div>
