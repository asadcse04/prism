<%= link_to 'New prism', new_prism_path, :class => 'button', :id => 'new-prism' %>
<h1>myPrisms</h2>
<h1>Email: <%= @user.email %></h1>


<h3> Owned prisms:</h3>
<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Highlight</th>
      <th>Visualize</th>
    </tr>

  </thead>

  <tbody>


  <% @prisms.each do |prism| %>
    <tr>
    <td><%= prism.title.html_safe %></td>

    <td class="highlight"> <%= link_to(highlight_path(prism), :class => 'highlight') do %>
      <%= image_tag('highlight_button.png') %>
    <% end %>
    </td>
    <td class="visualize">  <%= link_to(visualize_path(prism), :class => 'visualize') do %>
      <%= image_tag('visualize_button.png') %>
      
    <% end %>
    </td>
  </tr>

  </tr>
<% end %>
<p>Have unlisted Prisms?  Just copy and email the link to share with your Friends! </p>
</body>
<br>
<br>

</table>
<h3>Highlighted prisms: </h3>
<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Highlight</th>
      <th>Visualize</th>
    </tr>

  </thead>

  <tbody>

    <% @highlighted_prisms.each do |stuff| %>
      <% prism = Prism.find_by_uuid(stuff) %>
    <td><%= prism.title.html_safe %></td>

      <td class="highlight"> <%= link_to(highlight_path(prism), :class => 'highlight') do %>
        <%= image_tag('highlight_button.png') %>
      <% end %>
      </td>
      <td class="visualize">  <%= link_to(visualize_path(prism), :class => 'visualize') do %>
        <%= image_tag('visualize_button.png') %>
      <% end %>
      </td>
  </tr>
  <% end %>
</tbody>
</table>
