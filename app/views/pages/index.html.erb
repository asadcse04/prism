<div class="page-margin">
<h1><%=t 'index.welcome'%></h1>

<div class="warn">
  <p><%= t 'index.in_development'%></p>
</div>
<iframe width="280" height="172" src="http://www.youtube.com/embed/UGz8jcbJjRw?rel=0" frameborder="0" allowfullscreen></iframe>
<p id=index-text> <%=t 'index.about_text'%></p>

<ul id="texts">
  <% @documents.each do | document | %>
    <li>
    <div class="doc-tools">
      <%= link_to(highlight_path(document), :class => 'highlight') do %>
        <%= t 'index.highlight' %><span></span>
      <% end %>
      <%= link_to(visualize_path(document), :class => 'visualize') do %>
        <span></span><%= t 'index.visualize' %>
      <% end %>
     </div>
    <div class="doc-display">
      <%= link_to document.title, document %>
      <%= document.author %>
    </div>
    </li>
  <% end %>
</ul>

</div>

