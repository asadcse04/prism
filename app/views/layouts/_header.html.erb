<header>
<div class="header-margin">
<h1><a href="/"><%= image_tag('prism-logo.png') %></a></h1>
<p class="description"><%= t 'header.description_html' %></p>

<%= image_tag('bigprism.png', :id => "bigprism") %>
<div id="user-meta">
<% if user_signed_in? %>
  <%=t 'header.signed_in'%><%= current_user.email %>.
  <%= link_to t('header.sign_out'), destroy_user_session_path, :method => :delete, :id => 'sign-out' %>
<% end %>
<p><%= link_to t('header.register'), new_user_registration_path %>
<a href="/users/sign_in"><%= t'header.sign_in' %></a>
</p>
</div>
</div>
</header>
