<% content_for :extra_head do %>
  <script type="text/javascript" charset="utf-8">
$(setup_highlight);
</script>
<% end %>

<div id="Prismabob">
  <h2><%= @prism.title.html_safe %></h2>
  <h2><%= @prism.author %></h2>
  <div class="text">
    <%= @prism.content.html_safe %>
  <p id ="publication_date"><%= @prism.publication_date %> </p>
  <div id="license">
   <%= render 'cc_license' %>
  </div>
  </div>
</div>

  <div id="highlight_sidebar">
    <div id="tools">
        <ul id="highlighters">
          <% for facet in @prism.facets %>
            <li class ="facet">
              <input type="hidden" name = "order" value="<%=facet.order%>"/>
              <input type="hidden" name = "color" value="<%=facet.color%>"/>
              <span class="facet <%=facet.color%>"></span><%=facet.description%>
            </li>
          <% end %>
          <li class="facet eraser"><input type="hidden" name="order" value="delete"/><span class="facet"><%= image_tag ('eraser3.png'), :id => 'eraser' %></span><%= t "highlight.eraser" %></li>
        </ul>
          <p id="highlight_instructions"><%= t "highlight.instructions" %></p>
                  <%= form_tag do %>
          <p id="description"><%= @prism.description %></p>

          <div id="save_hihglight"> 
            <% for facet in @prism.facets %>
            <input type="hidden" value="" name="facet<%=facet.order%>_indices" id="facet<%=facet.order%>_indices"/>
          <% end %>
          <input type="submit" value="Save Highlights" />
        <% end %>
          </div>
      </div>
    </div>