<div class="page-margin">
  <p id="highlight_instructions"><%= t "highlight.instructions" %></p>
  <div id="Prismabob">
    <h1><%= @document.title %></h1>
    <h2><%= @document.author %></h2>

    <div class="text">
      <%= @document.content.html_safe %>
    </div>
    </div>
  <div id="tools">
      <ul id="highlighters">
        <% for facet in @prism.facets %>
          <li class="facet"><input type="hidden" value="<%=facet.color%>"/><%=facet.category%></li>
