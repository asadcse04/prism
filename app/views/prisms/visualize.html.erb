<% content_for :extra_head do %>
  <script type="text/javascript" charset="utf-8">
    $(function() {
      setup_visualize();
      select_facet($("li.vis_facet").eq(0));
    })
  </script>
<% end %>

<div class="page-margin">
    <div id="Prismabob">
    <h1><%= @prism.title.html_safe %></h1>
    <h2><%= @prism.author %></h2>

    <div class="text">
      <%= @prism.content.html_safe %>
    </div>
  </div>
  <div id="sidebar">
    <div id="visualizations">
      <p id="visualization-help"><%= t "visualize.instructions" %> </p>
      <ul id="highlighters">
        <% if @prism.facet1? %>
          <li class="vis_facet">
            <input type="hidden" class="color" value="<%="red"%>"/>
            <input type="hidden" value="<%=@frequencies["red"]%>" class="freq"/>
            <span class="facet <%="red"%>"></span><%=@prism.facet1%></li>
        <% end %>
        <% if @prism.facet2? %>
          <li class="vis_facet">
            <input type="hidden" class="color" value="<%="green"%>"/>
            <input type="hidden" value="<%=@frequencies["green"]%>" class="freq"/>
            <span class="facet <%="green"%>"></span><%=@prism.facet2%></li>
        <% end %>
        <% if @prism.facet3? %>
          <li class="vis_facet">
            <input type="hidden" class="color" value="<%="blue"%>"/>
            <input type="hidden" value="<%=@frequencies["blue"]%>" class="freq"/>
            <span class="facet <%="blue"%>"></span><%=@prism.facet3%></li>
        <% end %>
        <% if @prism.facet4? %>
          <li class="vis_facet">
            <input type="hidden" class="color" value="<%="yellow"%>"/>
            <input type="hidden" value="<%=@frequencies["yellow"]%>" class="freq"/>
            <span class="facet <%="yellow"%>"></span><%=@prism.facet4%></li>
        <% end %>
      </ul>
      <p id="viz-count">
      <span><% if @usercounter != nil %>
          <%=@usercounter%></span> <% if @usercounter == 1%>user <% else%>users <%end%>contributed to this visualization.
    <% end %>
    </p>
    <p id="sketchtext"><%= t 'visualize.sketches' %></p>
    <ul id="viz-sketches">
      <li>
      <%= link_to image_tag('viz001.jpg'), image_path('viz001.jpg') %>
      </li>
      <li>
      <%= link_to image_tag('viz002.jpg'), image_path('viz002.jpg') %>
      </li>
      <li>
      <%= link_to image_tag('viz003.jpg'), image_path('viz003.jpg') %>
      </li>
      <li>
      <%= link_to image_tag('viz004.jpg'), image_path('viz004.jpg') %>
      </li>
      <li>
      <%= link_to image_tag('viz005.jpg'), image_path('viz005.jpg') %>
      </li>
      <li>
      <%= link_to image_tag('viz006.jpg'), image_path('viz006.jpg') %>
      </li>
    </ul>

    </div>
  </div>
</div>
