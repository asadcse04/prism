// Imports --------------------------------------------------------------------

@import "base";
@import "normalize";
@import "fonts";
@import url(http://fonts.googleapis.com/css?family=Lustria|PT+Serif|PT+Sans|Noticia+Text|Andada|PT+Serif|PT+Sans);

#container {
  @include container;
  @include susy-grid-background;
  }

.warn {
  color: red;
  font-size: 20px;
  }
  
.page-margin {
    margin-left: auto;
    margin-right: auto;
    width: 1100px;
  }

a:link {text-decoration:none;      /*styles all the links on the site*/
  font-weight:bold;
        color: rgba(0,153,153,1.0);}
a:visited {text-decoration:none;
           color: rgba(0,153,153,1.0);}
a:hover {text-decoration:none;
         color: rgba(0,153,77,1.0);}
a:active {text-decoration:none;
          color: Dimgray;}

header {
margin-top: 3%;
margin-bottom: 5%;
background-image:  -webkit-linear-gradient(left, rgba(0,0,0,1) 0%, rgba(0,0,0,0.5) 100%);
/*two gradients-- first one is transparent and displays on top, creating the horizontal lines; second one is slight fade from black to gray, left to right */
font-family: "PT Sans", sans-serif;
   color: white;
   position:relative;
}

header:before, header:after {display:table; content: "";}
header:after {clear:both;}
header {*zoom:1;}

#user-meta {
  background-image: -webkit-linear-gradient(top, rgba(0,179,179,0.6) 0%, rgba(0,179,89,0.8) 25%, rgba(179,179,0,0.8) 50%, rgba(179,89,0,0.8) 75%, rgba(179,0,0,0.6) 100%);
  /*two gradients; top is same as the one on rest of header, bottom one is close to transparent at top and bottom to create a "fuzzier" edge*/ 
  float: right;
  font-size: 14px; 
  width: 25%;
  height: 90px;
  text-align: right;
  padding-right: 1%;
  padding-left: 2%;
  padding-top: 1%;     /*styles for entirety of rainbow log-in/sign-up area of header*/

  a, span {
    text-decoration: none;
    color: white;
    z-index:10000;
    position: relative;
   }

  p a:not(:last-child):after {
    content:" | ";
    margin: 0 8px;
    color: rgba(255,255,255,1.0);   /*puts vertical line between "forgot your password" and "sign up" links -- this is crazy CSS voodoo!*/
 }
}

#sign-out {display: block}  /*puts sign out link on its own line for consistency, no matter how long or short the username*/

#bigprism {
  position:absolute;
  top: -160px;
  z-index:9000;
  }

header h1 {
  float: left;
  margin-left: 9%;
  margin-right: 2%; /*styles anything with the H1 html tag in the header file. In this case, that's just the Prism logo */
}

p.description {
  float: left;
  width: 32%;
  margin-left: 2%;
  margin-top: 2%;
 }  /*styles short description in header*/

body {
  font-color: #003333;
  font-family: "PT Sans", sans-serif;
    /*font and color of all body text, unless otherwise specified in stylesheet*/
  h1 {
   size: 30px;
   margin-bottom: 10px;
   text-shadow: 1px 1px 1px rgba(0,0,0,0.5);  /*shadow on all body h1s -- black, 50% transparent*/
  }
 }

#homepic {
  float: left;
  width: 32%;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
  margin-right: 3%;  /*styles for picture on homepage, including 50% transparent black box shadow all around */
}

#index-text {
  line-height: 150%;
  margin-bottom: 10%;
  margin-top: 8%;
  font-size: 18px;
  a {
    background-color: #C0C0C0;
    float: right;
    margin-right: 15%;
    padding-left: 1%;
      }
  span {
    float: right;
    width: 0;
    height: 0;
    border-top: 14px solid white;
    border-bottom: 14px solid white;
    border-left: 28px solid #C0C0C0;
     }
}

#texts {
  list-style:none; 
  display:block;
  clear:all;
  margin: 10px 0px 0px;

  li {
    float: left;
    width: 24%;
    padding: 2%;
    margin-left: 3%;
    }
}

.doc-tools a {
    float: left;
    font-family: "PT Serif", times, serif;
    font-size: 18px;
    line-height: 150%;  /*gives the appearance of padding since actual padding won't work with the empty spans*/
    background-color: #C0C0C0;
    margin-top: 2px;
    margin-bottom: 20px;
    border: none;
    }

a.highlight { 
  padding-left: 3%;
 }

a.visualize { 
  float: right;
  padding-right: 3%;
 }

.highlight span {
  float: right;
  width: 0;
  height: 0;
  border-top: 14px solid white;
  border-bottom: 14px solid white;
  border-left: 28px solid #C0C0C0;
  }

.visualize span {
  float: left;
  margin-right: 5px;
  width: 0;
  height: 0;
  border-top: 14px solid #C0C0C0;
  border-bottom: 14px solid #C0C0C0;
  border-left: 28px solid white;
 } 

.doc-display {
  box-shadow: 0px 0px 20px rgba(0,0,0,0.25);
  height: 275px;
  padding: 2%;
  margin-top: 35px;
  font-size: 20px;
  font-family: "PT Serif", times, serif;
  text-align: center;
  position: relative;
  a {display: block}
  }

.doctitle {
  display: block;
  font-size: 24px;
  margin: 90px 0px 0px;
}

.author {
  display: block;
  width: 95%;
  text-align: center;
  font-size: 20px;
  position: absolute;
  bottom: 20px;  /*trying to figure out how to make the Poe look better next to the other two by positioning author in relation to bottom of div. more tinkering needed. */
}

footer {
  margin-top: 5%; 
  width: 100%;
  overflow: auto;
   }

#footer-links {
  display: table;
  float: right;
} 

#license, #slab-logo, #uva-lib-logo, #praxis-logo {
  font-family: "PT Serif", times, serif;
  display: table-cell;
  vertical-align: middle;
  padding-left: 20px;
  padding-right: 20px;
}

#footer-nav {
  margin-top: 3%;
  display: table;
  clear: all;
  padding: 1%;

  a {
    display: table-cell;
    font-family: "PT Sans", sans-serif;
    font-size: 14px;
   
    &:not(:last-child):after {
      content:" | ";
      color: #999; 
      margin-right: 5px;
      } 
   }
}

p.blockquote {
 padding-left: 8%;}

#Praxis {
  float: right;
  width: 30%;
  padding: 1%;
  margin-top: 20%;

  h2 {
    font-size: 30px;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
  }
}

#page-content {
  float: left;
  width: 60%;
  padding: 1%;
  margin-right: 2%;
  margin-top: 2%;

  h3 {
line-height: 8px;
  }
}

#Prismabob {
  float: left;
  width: 60%;
  padding: .5% 3% .5% 3%;
  margin-top: 1%;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.25);
  margin-right: 1%;

  h1 {
    line-height: 1em;
    font-family: "PT Serif", serif ;
    font-size: 30px;
    text-align: center;
    padding-top: 7%;
  }

  h2 {
    line-height: 1em;
    font-family: "PT Serif", serif ;
    font-size: 24px;
    text-align: center;
  }
  h3 {
    font-size: 18px;
    text-align: center;
  }
}

.text {
  font-family: "PT Serif", Times, serif;
  padding: 2%;
}

#highlight_instructions {
  float: left;
  font-size: 16px;
  width: 60%;
  text-align: center;
  padding-left: 3%;
}

#sidebar {
  float: right;
  width: 30%;
}

#highlighters {
  list-style: none;
  font-size: 18px;
  font-family: "PT Sans", sans-serif;
  margin-left: 0;
  padding: 0;
  line-height: 1;

  li {
    margin-bottom: 40px;
    line-height: 150%;
    clear: left;
    overflow: hidden;
   }
  span.red {
    background-color: rgba(179,179,0,1);
    border: none;
   }
  span.green {
    background-color: rgba(0,179,89,1);
    border: none;
   }
  span.blue {
    background-color: rgba(0,179,179,1);
    border: none;
   }
 }

.facet span {
  display: block;
  float: left;
  width: 30px;
  height: 30px;
  margin-right: 2%;
  }

.eraser {
    font-style: italic;
  }

#tools p {
  font-size: 14px;
  font-family: "PT Sans", sans-serif;
}

#visualization-help {
  padding-left: 13%;
}

#visualization-types {
   list-style: none;
  
   li {
   width: 100%;
   }

   img {
   max-width: 100%;
   }
 }

#userform {
  width: 35%;
  padding: 2%;
  margin-top: 3%;
  margin-left: 29%;
  margin-bottom: 3%;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.25);
  font-size: 16px;

  input[type="submit"] {
    font-family: "PT Sans", sans-serif;
    font-size: 16px;
    display: block;
    margin-top: 12px;
 }

  input[type="email"] {
    margin-bottom: 10px;
    display: block;
  }

  input[type="password"] {
    margin-bottom: 15px;
    display: block;
   }

   p a:not(:last-child):after {
    content:" | ";
    margin: 0 10px;
    margin-top: 15px;
    color: #999;   /*puts vertical line between "forgot your password" and "sign up" links -- this is crazy CSS voodoo!*/
   }
}

#user_password_confirmation {
  margin-bottom: 15px;
}

.fixed {
  position:fixed;
  top:0;
  margin-right: 9%;
}
