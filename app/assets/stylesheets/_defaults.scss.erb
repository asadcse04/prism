// Imports --------------------------------------------------------------------

@import "base";
@import "normalize";
@import "fonts";
@import url(http://fonts.googleapis.com/css?family=Lustria|PT+Serif|PT+Sans|Noticia+Text|Andada|PT+Serif|PT+Sans);

$page-margin: 10%;

#container {
  @include container;
  @include susy-grid-background;
}

.warn {
  color: red;
  font-size: 20px;
}

.page-margin {
  margin-left: $page-margin;
  margin-right: $page-margin;
}

a:link {text-decoration:none;      /*styles all the links on the site*/
  font-weight:bold;
  color: rgba(0,153,153,1.0);}
a:visited {text-decoration:none;
  color: rgba(0,153,153,1.0);}
a:hover {text-decoration:none;
  color: rgba(0,153,77,1.0);}
a:active {text-decoration:none;
  color: Dimgray;}

input[type="submit"] {
     font-family: "PT Sans", sans-serif;
     font-size: 18px;
     display: block;
     padding: 5px 10px;
 }

header {
  margin-top: 3%;
  margin-bottom: 5%;
  min-width: 1200px;
  @include pie;
  @include background(
    linear-gradient(left, rgb(0,0,0) 0%, rgb(100,100,100) 75%, rgba(0,0,0,0) 75%, rgba(0,0,0,0) 100%),  
    linear-gradient(top, rgba(0,179,179,0.6) 0%, rgba(0,179,89,0.8) 25%, rgba(179,179,0,0.8) 50%, rgba(179,89,0,0.8) 75%, rgba(179,0,0,0.6) 100%)
    );
  font-family: "PT Sans", sans-serif;
  color: white;
  position:relative;
}

header:before, header:after {display:table; content: "";}
header:after {clear:both;}
header {*zoom:1;}

#user-meta {
  float: right;
  font-size: 14px; 
  width: 25%;
  height: 120px;
  text-align: right;
  padding-right: $page-margin;
  padding-top: 1%;     /*styles for entirety of rainbow log-in/sign-up area of header*/

  a, span {
    text-decoration: none;
    color: white;
    z-index:10000;
    position: relative;
 }

 p a:not(:last-child):after {
   content:" | ";
   margin: 0 8px;
   color: rgba(255,255,255,1.0);   /*puts vertical line between "forgot your password" and "sign up" links -- this is crazy CSS voodoo!*/
 }
}

#sign-out {display: block}  /*puts sign out link on its own line for consistency, no matter how long or short the username*/

#bigprism {
  position: absolute;
  top: -160px;
  left: 75%;
  margin-left: -201px;
  z-index:9000;
}

header h1 {
  float: left;
  margin-left: $page-margin;
  margin-right: 2%;
}

#browser-upgrade {
  position: absolute;
  width: 100%; 
  background: #ccc000;
  line-height: 2em;
  text-align: center;
  top: 160px;
  z-index: 1000000;
}

#languages  {
   position: absolute;
   top: 0;
   left: 10%;
    a {
      font-size: 14px;
      
      &:not(:last-child):after {
      content:"|";
      color: #999;
      padding: 0px 10px;
    } 
}
}

p.description {
  float: left;
  width: 28%;
  margin-left: 2%;
  margin-top: 20px;
 }  /*styles short description in header*/

 body {
   min-width: 1000px;
   background-color: #fafafa;
   font-color: #003333;
   font-family: "PT Sans", sans-serif;
   /*font and color of all body text, unless otherwise specified in stylesheet*/
   h1 {
     size: 30px;
     margin-bottom: 10px;
     text-shadow: 1px 1px 1px rgba(0,0,0,0.5);  /*shadow on all body h1s -- black, 50% transparent*/
}
 }

 #homepic {
   float: left;
   box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
   margin-right: 3%;  /*styles for picture on homepage, including 50% transparent black box shadow all around */
   margin-top: 70px;
}

#index-text {
  font-family: "PT Serif", times, serif; 
  margin-left: 385px;
  padding: 2.5em 0 0.8em;

  p {
    line-height: 140%;
    font-size: 17px;
  
    &:first-letter {
   font-size: 80px;
   text-shadow: 1px 1px 1px #969696;
   display: block;
   float: left;
   line-height: 0.75;
   padding-right: 5px;
  }
  }
}    

#texts {
  list-style:none;
  font-family: "PT Serif", times, serif; 
  margin-left: 350px;
  
  li {
     margin-top: 20px;
     }
}

.mention {
  .book {
    font-style: italic;
  }
  .poem:before {
    content:"\201C";
  }
  .poem:after {
    content: "\201D";
  }
}

  .doctitle {
    display: block;
    font-size: 22px;
}
  .author {
      display: block;
       }
  
.doc-tools {

  a {
    font-size: 18px;
    margin-top: 20px;
    padding: 0px 15px 0px 0px;
    
   &:not(:last-child):after {
   content:" | ";
   color: #999;   
   margin-left: 10px;
  }
 }
}


footer {
  clear: both;
  margin-top: 40px; 
  overflow: auto;
  margin-left: $page-margin;
   }

   #footer-links {
     display: table;
     float: right;
     margin-right: $page-margin;
} 

#license, #slab-logo, #uva-lib-logo, #praxis-logo {
  font-family: "PT Serif", times, serif;
  display: table-cell;
  vertical-align: middle;
  padding-left: 20px;
  padding-right: 20px;
}

#footer-nav {
  display: table;
  clear: all;
  padding: 1%;

  a {
    display: table-cell;
    font-family: "PT Sans", sans-serif;
    font-size: 16px;

    &:not(:last-child):after {
      content:"|";
      color: #999; 
      margin: 10px;
    } 
 }
}

p.blockquote {
  padding-left: 8%;
}

#Praxis {
  float: right;
  width: 30%;
  padding: 1%;
  margin-top: 20%;

  h2 {
    font-size: 30px;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
}
}

#page-content {
  float: left;
  width: 60%;
  padding: 1%;
  margin-right: 2%;
  margin-top: 2%;

  h3 {
    line-height: 8px;
  }
}

#Prismabob {
  background-color: #ffffff;
  float: left;
  width: 60%;
  padding: .5% 3% .5% 3%;
  margin-top: 1%;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.25);
  margin-right: 1%;

  h1 {
    line-height: 1em;
    font-family: "PT Serif", serif ;
    font-size: 30px;
    text-align: center;
    padding-top: 7%;
}

h2 {
  line-height: 1em;
  font-family: "PT Serif", serif ;
  font-size: 24px;
  text-align: center;
}
h3 {
  font-size: 18px;
  text-align: center;
}
}

.text {
  font-family: "PT Serif", Times, serif;
  padding: 2%;
}

#highlight_instructions {
  float: left;
  font-size: 16px;
  width: 60%;
  text-align: center;
  padding-left: 3%;
}

#sidebar {
  float: right;
  padding-top: 50px;
  width: 30%;
}

#highlighters {
  list-style: none;
  font-size: 18px;
  font-family: "PT Sans", sans-serif;
  margin-left: 0;
  padding: 0;
  line-height: 1;

  li {
    margin-bottom: 20px;
    line-height: 150%;
    clear: left;
    overflow: hidden;
 }
 }

 span.facet {
   display: block;
   float: left;
   width: 30px;
   height: 30px;
   margin-right: 2%;

   &.red {
     background-color: rgb(179,179,0);
  }

  &.green {
    background-color: rgb(0,179,89);
  }

  &.blue {
    background-color: rgb(0,179,179);
  }
}

.eraser {
  font-style: italic;
  margin-top: 30px;
}

#eraser {
  width: 10%;
  margin-left: 2%;
}

#tools p {
  font-size: 14px;
  font-family: "PT Sans", sans-serif;
}

#visualization-types {
  list-style: none;

  li {
    width: 100%;
 }

 img {
   max-width: 100%;
 }
 }

 
 #viz-count {
   font-size: 18px;

   span {
     color: #B30000;
     font-weight: bold;
   }
}

 #userform {
   width: 35%;
   padding: 2%;
   margin-top: 3%;
   margin-left: 29%;
   margin-bottom: 3%;
   font-size: 16px;

   input[type="submit"]{
     margin-top: 10px;
   }

 input[type="email"] {
   margin-bottom: 10px;
   display: block;
}

input[type="password"] {
  margin-bottom: 15px;
  display: block;
 }

 p a:not(:last-child):after {
   content:" | ";
   margin: 0 10px;
   margin-top: 15px;
   color: #999;   /*puts vertical line between "forgot your password" and "sign up" links -- this is crazy CSS voodoo!*/
 }
}

#user_password_confirmation {
  margin-bottom: 15px;
}

.fixed {
  position:fixed;
  top:0;
  margin-right: 9%;
}
